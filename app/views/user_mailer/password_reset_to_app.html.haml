  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %center{:style => "background-color:#faf7f5;table-layout:fixed;width:100%;padding:10px;"}
      %div{:style => "Margin:0 auto;max-width:600px;text-align:left;"}
        %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "Margin:0 auto;border-spacing:0;max-width:600px;", :width => "100%"}
          %tbody
            %tr
              %td{:height => "55", :style => "padding:0"}
            %tr
              %td{:style => "padding:0"}
                %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-spacing:0", :width => "100%"}
                  %tbody
                    %tr
                      %td{:style => "padding:0"}
                        %a{"href" => @host_url , :target => "_blank",style:"color: #5f57ba;font-size: 20px;text-decoration:none;"}
                          RoundTrip
                    %tr
                      %td{:height => "16", :style => "padding:0"}
                    %tr
                      %td{:background => "https://doodle.com/graphics/mails0/divider.png", :height => "1", :style => "padding:0;"}
                    %tr
                      %td{:height => "16", :style => "padding:0"}
                    %tr
                      %td{:style => "padding:0"}
                        %p{:style => "color:#282f34;font-family:'Open Sans', sans-serif;font-size:16px;font-style:normal;font-weight:normal;line-height:1.4;margin:0;padding:0;"}
                          Hi
                          =@user.username
                          ,

                    %tr
                      %td{:height => "16", :style => "padding:0"}
                    %tr
                      %td{:style => "padding:0"}
                        %p{:style => "color:#282f34;font-family:'Open Sans', sans-serif;font-size:16px;font-style:normal;font-weight:normal;line-height:1.4;margin:0;padding:0;"}

                          A new password for your account
                          %strong
                            (
                            =@user.email
                            )
                          %span has been requested.
                          %br
                          Use this token, to reset your password.

                    %tr
                      %td{:height => "16", :style => "padding:0;text-align: center;font-size: 20px;padding: 16px;/* width: 200px; */"}
                        %div{style:"width: 150px;margin: 0 auto;background: #ffff;padding: 10px;border: 1px solid #ccc;"}
                          %span=@user.reset_password_token




                    %tr
                      %td{:height => "12", :style => "padding:0"}

                    %tr
                      %td{:style => "padding:8px 4px;background-color:#ffffff;font-size:16px;text-align:left", :valign => "top"}
                        %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                          %tbody
                            %tr
                              %td{:style => "padding:0 14px;border-left:3px #5f57ba solid", :valign => "top"}
                                %div{:style => "color:#575757;font-family:Courier,'Courier New',monospace;font-size:15px;line-height:22px;text-align:left"}
                                  If you did not request a new password for your account,
                                  please ignore this e-mail.

                                  %br
                                  This token is valid for 7 days.
                                  %br
                                  %span - Your Roundtrip Team
                      %tr
                        %td{:height => "60", :style => "padding:0"}

            %tr
              %td{:height => "50", :style => "padding:0"}
