.row
  .columns.large-12
    %div.right_div

      %div.wrapper
        .parallelogram.user_div

        .parallelogram.user_div_ft
          %p.user_status active


      .parallelogram{style:'width: 250px;height: 55px;'}

        .status_count#c-user-count
          =@CMlatestTopicUser.count

        .status_title#c-user-name
          -if @CMlatestTopicUser.count < 1
            no user
          -else
            =@CMlatestTopicUser[0]
      .picbox
        =image_tag("Avatars/Chat-Avatar-Chihuahua.png")


.row
  .columns.large-12
    %div.right_div

      %div.wrapper
        .parallelogram.topic_div

        .parallelogram.topic_div_ft
          %p.topic_status newest


      .parallelogram{style:'width: 270px;height: 55px;margin-top: 30px;'}
        .status_count#c-topic-count
          =@CMlatestTopics.count

        .status_title#c-topic-title
          =@CMlatestTopics.first.title rescue 'No Topic'

      .postbox#c-post-count
        -if @CMlatestTopics.count > 0
          =@CMlatestTopics.first.posts.count rescue '0'
        -else
          0

.row
  .columns.large-12
    %div.right_div

      %div.wrapper
        .parallelogram.loc_div

        .parallelogram.adddiv
          %p.addinfo#carmic_address goldhill plaza

      .parallelogram.country_div
        .status_country#carmic_country
          singapore