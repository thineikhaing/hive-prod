!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, height=device-height, initial-scale=1"}
    %title Hive
    = include_gon
    = stylesheet_link_tag   "hivev2"
    = javascript_include_tag "hivev2"

    = csrf_meta_tags
    %link{:href => "http://openlayers.org/en/v3.14.2/css/ol.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=false"}
    -#%script{:src => "http://openlayers.org/en/v3.14.2/build/ol.js"}
    %script{:src => "http://www.openlayers.org/api/OpenLayers.js"}

  %body
    = javascript_tag do
      PUSHER_KEY = "#{Pusher.key}";
    = javascript_include_tag "web", "http://js.pusher.com/1.11/pusher.min.js"
    .container
      .header{style:'height:60px;'}
      .row
        .large-12.columns
          = yield


        #wrapper_post_list.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
          %table#display_topic{style:'margin:0 auto;'}
          .post_div
            %table#display_post{style:'margin:0 auto;'}


          %a.close-reveal-modal{"aria-label" => "Close"} ×



        #wrapper_topic_list.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
          .topic_modal_div
            %table#topiclist_table{style:'margin:0 auto;'}

          %a.close-reveal-modal{"aria-label" => "Close"} ×