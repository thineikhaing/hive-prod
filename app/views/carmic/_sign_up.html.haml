#myModal.reveal-modal{"data-reveal" => ""}
  = form_for :home, data:{ abide: " " }, url: { controller: "carmic", action: "singup", method: "singup"} , :remote => true do |f|
    .small-15.columns
      =hidden_field_tag :hiveweb
      %span
        Email
        %input{:required => "", :type => "email", :name => "email"}/
        %small.error Email address is required
    .small-15.columns
      %br
    .small-15.columns
      %span
        Password
        %input#password{:required => "", :type => "password", :name => "password"}/
        %small.error Password is required
    .small-15.columns
      %br
    .small-15.columns
      %span
        Confirm Password
        %input{:required => "", :type => "password"}/
        %small.error Password mismatched.
    .small-15.columns
      %br
    .small-15.columns
      =submit_tag 'Sign Up' , :class => 'tiny radius button'
  %a.close-reveal-modal X